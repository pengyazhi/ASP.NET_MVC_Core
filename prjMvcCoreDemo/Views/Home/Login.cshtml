
@{
    ViewData["Title"] = "Login";
}

<h1>登入系統</h1>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>輸入使用者帳號與密碼</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            帳號 ( 註冊時填寫的Email )
            <div class="col-md-10">
                @Html.TextBox("txtAccount", "", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            密碼
            <div class="col-md-10">
                @Html.TextBox("txtPassword", "", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="登入" class="btn btn-default" />
            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("忘記密碼", "List")
    </div>
}