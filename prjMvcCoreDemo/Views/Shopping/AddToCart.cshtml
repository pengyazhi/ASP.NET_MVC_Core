
@{
    ViewData["Title"] = "AddToCart";
}

<h2>加入購物車作業</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>請輸入數量</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="txtFId" value="@ViewBag.FID" />
        <div class="form-group">
            數量
            <div class="col-md-10">
                @Html.TextBox("txtCount","1", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="購買" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("取消", "List")
</div>



